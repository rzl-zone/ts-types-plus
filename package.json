{
  "name": "@rzl-zone/ts-types-plus",
  "version": "0.0.14",
  "sideEffects": false,
  "engineStrict": true,
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.ts",
  "types": "./dist/index.d.ts",
  "author": "Rizalvin Dwiky <rizalvindwiky1998@gmail.com>",
  "homepage": "https://github.com/rzl-zone/ts-types-plus#readme",
  "description": "A lightweight, modern collection of TypeScript types and interfaces to enhance type safety and improve code maintainability.",
  "contributors": [
    "Rizalvin Dwiky <rizalvindwiky1998@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/rzl-zone/ts-types-plus/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^20.19.11",
    "chalk": "^5.6.2",
    "del-cli": "^6.0.0",
    "eslint": "^9.31.0",
    "terser": "^5.44.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "type-fest": "^5.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "engines": {
    "node": ">=16"
  },
  "exports": {
    "./runtime": {
      "import": "./dist/index.ts",
      "require": "./dist/index.ts"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.ts",
      "require": "./dist/index.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "keywords": [
    "typescript",
    "utils",
    "helpers",
    "library",
    "@rzl-zone/ts-types-plus",
    "rzl",
    "rzl-zone",
    "ts-types-plus",
    "utility",
    "ts",
    "types",
    "rzl-ts-types-plus",
    "helper"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzl-zone/ts-types-plus.git"
  },
  "scripts": {
    "clean:dist": "del-cli \"dist/*\"",
    "prepublishOnly": "npm run build",
    "delete-dist:index": "del-cli \"dist/index.{js,mjs,js.map,cjs,cjs.map}\"",
    "delete-dist:index-dts": "del-cli \"dist/index.d.{ts,mts,ts.map,cts,cts.map}\"",
    "postbuild": "del-cli \"dist/**/*.d.{c,m}ts\" && npm run delete-dist:index",
    "build": "npm run clean:dist && tsup && npm run inject:banner && npm run minify:dts-dist && npm run postbuild",
    "build:types-dts": "dts-bundle-generator --config dts-config.cjs --silent --external-imports next",
    "inject:banner": "tsx scripts/injectBanner",
    "minify:dts-dist": "tsx scripts/minifyDtsDist && npm run copy:dist-type ",
    "copy:dist-type": "tsx scripts/copyDistType.ts",
    "check-publish": "npm run build && npm pack --dry-run",
    "release-patch": "npm version patch && git push && git push --tags && npm publish"
  }
}
